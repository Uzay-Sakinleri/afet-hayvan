---
const { title, h1text } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="font-sans">
    <nav class="flex justify-between items-center py-5 mx-3 text-xl mt-5">
      <header>
        <h2><a href="#" class="pl-5">Afet Hayvan</a></h2>
      </header>
      <ul class="[&>li]:inline-block [&>li]:px-10 [&>li]:py-35">
        <li><a href="#">Ana Sayfa</a></li>
        <li><a href="#">İlanlar</a></li>
        <li>
          <button class="border border-black p-3 bg-[#9DD4AB] rounded-[6%]"
            ><a href="#">Giriş</a></button
          >
        </li>
      </ul>
    </nav>
    <main>
      <h1 class="text-center text-xl mt-5">{h1text}</h1>
      <slot />
    </main>
    <footer></footer>
  </body>
</html>
